#--------------------------------------------------------------------
# CONFIGURACIÓN DEL SISTEMA
#--------------------------------------------------------------------

# Entorno: development, production, testing
CI_ENVIRONMENT = development

#--------------------------------------------------------------------
# URL BASE DE LA APLICACIÓN
#--------------------------------------------------------------------

# IMPORTANTE: Cambia esto según tu configuración
# Ejemplos:
# http://localhost/
# http://localhost:8080/
# https://midominio.com/

app.baseURL = 'http://localhost:8080/'

#--------------------------------------------------------------------
# SESIONES
#--------------------------------------------------------------------

# Nombre de la cookie de sesión
app.sessionDriver = 'CodeIgniter\Session\Handlers\FileHandler'
app.sessionCookieName = 'ci_session'
app.sessionExpiration = 7200
app.sessionSavePath = null
app.sessionMatchIP = false
app.sessionTimeToUpdate = 300
app.sessionRegenerateDestroy = false

#--------------------------------------------------------------------
# COOKIES
#--------------------------------------------------------------------

app.cookiePrefix = ''
app.cookieDomain = ''
app.cookiePath = '/'
app.cookieSecure = false
app.cookieHTTPOnly = true
app.cookieSameSite = 'Lax'

#--------------------------------------------------------------------
# SEGURIDAD
#--------------------------------------------------------------------

# Token CSRF (Cross-Site Request Forgery)
# Deshabilitado por simplicidad en este proyecto educativo
# En producción, deberías habilitarlo
security.tokenName = 'csrf_token_name'
security.headerName = 'X-CSRF-TOKEN'
security.cookieName = 'csrf_cookie_name'
security.expires = 7200
security.regenerate = true
security.redirect = true
security.samesite = 'Lax'

#--------------------------------------------------------------------
# LOGGING
#--------------------------------------------------------------------

# Nivel de log:
# 0 = Deshabilitado
# 1 = Error
# 2 = Debug
# 3 = Info
# 4 = All
logger.threshold = 4

#--------------------------------------------------------------------
# CONFIGURACIÓN DE UPLOADS
#--------------------------------------------------------------------

# Tamaño máximo de archivo (en bytes)
# 5MB = 5 * 1024 * 1024 = 5242880
upload.max_size = 5242880

# Tipos de archivos permitidos (imágenes)
upload.allowed_types = 'gif|jpg|jpeg|png|webp'

#--------------------------------------------------------------------
# ZONA HORARIA
#--------------------------------------------------------------------

app.timezone = 'America/Mexico_City'

#--------------------------------------------------------------------
# NOTAS IMPORTANTES
#--------------------------------------------------------------------

# 1. Este archivo NO debe incluirse en el control de versiones (Git)
# 2. Crea un archivo .env.example sin valores sensibles para compartir
# 3. Cada entorno (desarrollo, producción) debe tener su propio .env
# 4. Nunca compartas este archivo con valores reales

#--------------------------------------------------------------------
# CONFIGURACIÓN PARA DESARROLLO
#--------------------------------------------------------------------

# Mostrar errores en pantalla (solo en desarrollo)
CI_ENVIRONMENT = development

# En producción, usa:
# CI_ENVIRONMENT = production
